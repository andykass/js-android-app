<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="match_parent">

        <com.jaspersoft.android.jaspermobile.widget.TopCropImageView
            android:id="@android:id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:contentDescription="@string/img_cd_list_item"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/kpiImage"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" />
    </FrameLayout>

    <CheckedTextView
        android:id="@android:id/text1"
        style="@style/list2.item.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/iconContainer"
        android:layout_toRightOf="@id/iconContainer"
        android:ellipsize="end"
        android:textColor="@color/list_label_grey"
        tools:text="Large Text" />

    <CheckedTextView
        android:id="@android:id/text2"
        style="@style/list2.item.subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/iconContainer"
        android:layout_toLeftOf="@+id/miscStub"
        android:layout_toRightOf="@id/iconContainer"
        android:layout_toStartOf="@+id/miscStub"
        android:ellipsize="end"
        android:textColor="@color/list_label_light_grey"
        tools:text="Small Text" />

    <ViewStub
        android:id="@+id/timestampStub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@android:id/text1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:inflatedId="@+id/timestamp"
        android:layout="@layout/res_metadata" />

    <ViewStub
        android:id="@+id/miscStub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:inflatedId="@+id/misc"
        android:layout="@layout/res_metadata" />

</merge>