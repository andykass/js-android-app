<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#454850"
        android:padding="4dp">

        <com.jaspersoft.android.jaspermobile.widget.AutoLayerTextView
            android:id="@+id/firstPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_first_page"
            android:clickable="true" />

        <com.jaspersoft.android.jaspermobile.widget.AutoLayerTextView
            android:id="@+id/previousPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/firstPage"
            android:layout_toRightOf="@+id/firstPage"
            android:background="@drawable/ic_previous_page"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.jaspersoft.android.jaspermobile.widget.AutoLayerTextView
                android:id="@+id/currentPageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rectangle"
                android:clickable="true"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_marginRight="6dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_dark"
                tools:text="1" />

            <TextView
                android:id="@+id/totalPageLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/primary_text_dark"
                tools:text="of 47" />
        </LinearLayout>


        <com.jaspersoft.android.jaspermobile.widget.AutoLayerTextView
            android:id="@+id/nextPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lastPage"
            android:layout_toStartOf="@+id/lastPage"
            android:background="@drawable/ic_next_page"
            android:clickable="true" />

        <com.jaspersoft.android.jaspermobile.widget.AutoLayerTextView
            android:id="@+id/lastPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_last_page"
            android:clickable="true" />

    </RelativeLayout>


</RelativeLayout>