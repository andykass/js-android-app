<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.JasperMobile.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp" />

    <com.jaspersoft.android.jaspermobile.widget.JSWebView
        android:id="@+id/webView"
        android:visibility="invisible"
        android:layout_below="@id/progressBar"
        android:layout_above="@+id/paginationControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@android:id/empty"
        tools:text="@string/rv_error_empty_report"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jaspersoft.android.jaspermobile.activities.viewer.html.report.widget.PaginationBarView_
        android:id="@+id/paginationControl"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#454850"
        android:padding="4dp"
        />
</RelativeLayout>