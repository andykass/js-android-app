<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/reportMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressLoading"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/reportScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/paginationControl"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/js_dark_gray">

            <View
                android:id="@+id/reportScrollPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

    </ScrollView>

    <com.jaspersoft.android.jaspermobile.activities.viewer.html.report.widget.PaginationBarView_
        android:id="@+id/paginationControl"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="#454850"
        android:padding="4dp"
        android:visibility="gone" />

</RelativeLayout>