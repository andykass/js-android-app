<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/inputControl.layout"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ic_text_label"
            style="@style/inputControl.label"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/ic_date_action_container"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/ic_datetime_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/ic_text_label"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/ic_date_action_container" />

        <LinearLayout
            android:id="@+id/ic_date_action_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/ic_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@drawable/ic_menu_close"
                android:padding="6dp" />

            <View
                android:id="@+id/ic_clear_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/divider_color"/>

            <ImageButton
                android:id="@+id/ic_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_date"
                android:padding="6dp" />

            <View
                android:id="@+id/ic_datetime_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@color/divider_color"/>

            <ImageButton
                android:id="@+id/ic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_time"
                android:padding="6dp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/ic_error_text"
        style="@style/inputControl.errorText"
        android:visibility="gone" />

</LinearLayout>
