<resources>
    <style name="Theme.JasperMobile" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/ic_resources_background</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="colorPrimary">#3af</item>
        <item name="colorPrimaryDark">#aaf</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="drawerArrowStyle">@style/Widget.JasperMobile.DrawerArrowToggle</item>
        <item name="android:textViewStyle">@style/Widget.JasperMobile.TextView</item>
        <item name="android:editTextStyle">@style/Widget.JasperMobile.EditText</item>
        <item name="android:spinnerStyle">@style/Widget.JasperMobile.Spinner</item>
        <item name="android:buttonStyle">@style/Widget.JasperMobile.Button</item>

        <!--android-styled-dialogs reference style -->
        <item name="sdlDialogStyle">@style/Widget.JasperMobileDialog</item>

        <!--App reference styles-->
        <item name="listLayoutStyle">@style/list2.item.layout</item>
        <item name="gridLayoutStyle">@style/grid.item.layout</item>
    </style>

    <style name="Theme.JasperMobile.NoToolbar" parent="Theme.JasperMobile">
       <item name="windowToolbar">false</item>
    </style>

    <style name="Theme.JasperMobile.Settings" parent="Theme.JasperMobile">
        <item name="android:editTextStyle">@android:style/Widget.Holo.EditText</item>
    </style>


    <style name="Widget.JasperMobile.ProgressBar.Horizontal" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal" />

    <style name="Widget.JasperMobileDialog" parent="@style/DialogStyleDark.Custom" />

    <style name="DialogStyleDark.Custom">
        <item name="titleTextColor">@color/dialog_title_txt_color</item>
        <item name="dialogBackground">@drawable/ic_resources_background</item>
    </style>

</resources>