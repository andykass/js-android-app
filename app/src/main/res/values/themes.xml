<resources>
    <style name="Theme.JasperMobile" parent="Base.Theme.AppCompat">
        <item name="android:windowBackground">@drawable/bg_application_main</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif-light</item>

        <item name="colorAccent">@color/js_blue</item>
        <item name="colorPrimary">@color/js_gray</item>

        <item name="drawerArrowStyle">@style/Widget.JasperMobile.DrawerArrowToggle</item>
        <item name="actionModeStyle">@style/Widget.JasperMobile.ActionMode</item>
        <item name="android:textViewStyle">@style/Widget.JasperMobile.TextView</item>
        <item name="android:editTextStyle">@style/Widget.JasperMobile.EditText</item>
        <item name="android:spinnerStyle">@style/Widget.JasperMobile.Spinner</item>
        <item name="android:buttonStyle">@style/Widget.JasperMobile.Button</item>
        <item name="android:checkboxStyle">@style/Widget.JasperMobile.CheckBox</item>

        <!--App reference styles-->
        <item name="listLayoutStyle">@style/list2.item.layout</item>
        <item name="gridLayoutStyle">@style/grid.item.layout</item>

        <!-- For Action Mode http://stackoverflow.com/questions/26450936/actionmode-with-toolbar-offsetting-content-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.JasperMobile.NoToolbar" parent="Theme.JasperMobile">
       <item name="windowToolbar">false</item>
    </style>

    <style name="Theme.JasperMobile.Settings" parent="Theme.JasperMobile">
        <item name="android:editTextStyle">@android:style/Widget.Holo.EditText</item>
    </style>

</resources>