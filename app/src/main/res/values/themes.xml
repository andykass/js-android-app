<resources>
    <style name="Theme.JasperMobile" parent="Theme.AppCompat">
        <item name="android:windowBackground">@drawable/ic_resources_background</item>
        <item name="android:actionBarStyle">@style/Widget.JasperMobile.ActionBar</item>
        <item name="drawerArrowStyle">@style/Widget.JasperMobile.DrawerArrowToggle</item>
        <item name="colorPrimary">@drawable/ab_solid_home</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>

        <!--android-styled-dialogs reference style -->
        <item name="sdlDialogStyle">@style/Widget.JasperMobileDialog</item>

        <!--App reference styles-->
        <item name="listLayoutStyle">@style/list2.item.layout</item>
        <item name="gridLayoutStyle">@style/grid.item.layout</item>
    </style>

    <style name="Theme.JasperMobile.NoActionBar" parent="Theme.JasperMobile">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.JasperMobile.Settings" parent="Theme.JasperMobile">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="Widget.JasperMobile.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_home</item>
    </style>

    <style name="Widget.JasperMobile.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.JasperMobile.ProgressBar.Horizontal" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal" />

    <style name="Widget.JasperMobileDialog" parent="@style/DialogStyleDark.Custom" />

    <style name="DialogStyleDark.Custom">
        <item name="titleTextColor">@color/dialog_title_txt_color</item>
        <item name="dialogBackground">@drawable/ic_resources_background</item>
    </style>

</resources>