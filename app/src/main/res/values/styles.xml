<resources>

    <!-- Default Widget Style Style -->
    <style name="Widget.JasperMobile.TextView" parent="android:Widget.Holo.TextView">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.EditText" parent="android:Widget.Holo.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.Spinner" parent="android:Widget.Holo.Spinner">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.Button" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Widget.JasperMobile.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/js_light_gray</item>
    </style>

    <style name="Widget.JasperMobile.ProgressBar.Horizontal" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal" />

    <style name="CardView.Auth">
        <item name="cardBackgroundColor">@null</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="CardView.Auth.AddAccount">
    </style>

    <style name="CardView.Auth.TryDemo">
    </style>

    <style name="CardView.Auth.Container">
        <item name="android:layout_marginLeft">-4dp</item>
        <item name="android:layout_marginRight">-4dp</item>
    </style>

    <!-- Input Controls -->
    <style name="inputControl" />

    <style name="inputControl.layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="inputControl.label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="inputControl.errorText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <!-- Boolean -->
    <style name="inputControl.boolean" />

    <style name="inputControl.boolean.checkBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Single Value -->
    <style name="inputControl.singleValue" />

    <style name="inputControl.singleValue.editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Date -->
    <style name="inputControl.date" />

    <style name="inputControl.date.inputContainer" />

    <style name="inputControl.date.inputContainer.layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="inputControl.date.inputContainer.editText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="inputControl.date.inputContainer.picker">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="inputControl.date.inputContainer.picker.date">
        <item name="android:src">@drawable/ic_date_picker</item>
    </style>

    <style name="inputControl.date.inputContainer.picker.time">
        <item name="android:src">@drawable/ic_time_picker</item>
    </style>

    <!-- Single/Multi Select -->
    <style name="inputControl.select" />

    <style name="inputControl.select.spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Report Options Layout -->
    <style name="reportOptions" />

    <style name="reportOptions.container" />

    <style name="reportOptions.container.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="reportOptions.container.inputControls" />

    <style name="reportOptions.container.inputControls.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="reportOptions.button">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="reportOptions.switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/im_input_controls_divider</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Report HTML Viewer Layout -->
    <style name="htmlViewer" />

    <style name="htmlViewer.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="htmlViewer.webView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="htmlViewer.progressBar" parent="Widget.JasperMobile.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">-6dp</item>
    </style>

    <!-- Save Report Layout -->
    <style name="saveReport" />

    <style name="saveReport.reportName" />

    <style name="saveReport.reportName.label" parent="inputControl.label" />

    <style name="saveReport.reportName.input" parent="inputControl.singleValue.editText" />

    <style name="saveReport.reportName.error" parent="inputControl.errorText" />

    <style name="saveReport.outputFormat" />

    <style name="saveReport.outputFormat.label" parent="inputControl.label" />

    <style name="list2" />

    <style name="list2.item" />

    <style name="list2.item.layout">
        <item name="android:background">@drawable/bg_item_resource</item>
    </style>

    <style name="list2.item.title">
        <item name="android:textColor">@color/list_label_grey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list2.item.subTitle">
        <item name="android:textColor">@color/list_label_light_grey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list2.item.metadata">
        <item name="android:textColor">@color/list_label_light_grey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="grid" />

    <style name="grid.item" />

    <style name="grid.layout">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="grid.item.layout">
        <item name="android:background">@drawable/bg_item_resource</item>
    </style>

    <style name="grid.item.context">
        <item name="android:padding">8dp</item>
    </style>

    <style name="grid.item.title">
        <item name="android:textColor">@color/list_label_grey</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:lines">2</item>
    </style>

    <style name="grid.item.subTitle">
        <item name="android:textColor">@color/list_label_light_grey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:maxLines">2</item>
    </style>

    <!--Add account page-->

    <style name="editTextAccount">
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/im_login_edit</item>
        <item name="android:ems">10</item>
    </style>

</resources>