<resources>

    <!-- Default Widget Style Style -->
    <style name="Widget.JasperMobile.TextView" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.EditText" parent="android:Widget.Material.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.Spinner" parent="android:Widget.Material.Spinner">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.JasperMobile.Button" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CardView.Auth">
        <item name="cardBackgroundColor">@null</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="CardView.Auth.AddAccount">
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="CardView.Auth.TryDemo">
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="CardView.Auth.Container">
        <item name="android:layout_marginLeft">-2dp</item>
        <item name="android:layout_marginRight">-2dp</item>
    </style>

    <style name="Theme.JasperMobile.Dialog.Alert" parent="Theme.AppCompat.Dialog">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>

        <item name="colorPrimary">@color/js_blue</item>
        <item name="colorAccent">@color/js_blue</item>
        <item name="colorPrimaryDark">@color/js_blue</item>
    </style>

</resources>